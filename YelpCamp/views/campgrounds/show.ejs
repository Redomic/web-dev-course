<%-block('title').append('Campground Details')-%>
<%-layout('layouts/boilerplate.ejs')-%>

<div class="row mb-5">
  <div class="col-6">
    <div class="card">
      <img src="<%= campground.image %>" class="card-img-top" alt="" />
      <div class="card-body">
        <h3 class="card-title"><%= campground.title %></h3>
        <h4 class="card-subtitle mb-2 text-muted">
          <%= campground.location %>
        </h4>

        <p class="card-text"><%= campground.description %></p>
        <h4 class="card-subtitle mb-3">
          Price: $<%= campground.price %>/night
        </h4>
      </div>
      <% if (currentUser && campground.author.equals(currentUser._id)) {%>
      <div class="card-footer">
        <a
          href="/campgrounds/<%= campground._id %>/edit"
          class="btn btn-primary"
          >Edit Campground</a
        >
        <form
          action="/campgrounds/<%= campground._id %>?_method=DELETE"
          method="POST"
          class="d-inline"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
      <div class="card-footer text-muted">
        By <%= campground.author.username %>
      </div>
    </div>
  </div>
  <div class="col-6">
    <form
      class="validated-form"
      action="/campgrounds/<%= campground._id %>/review"
      method="POST"
      novalidate
    >
      <div class="card p-4">
        <h2 class="mb-3">Leave a review</h2>
        <div class="mb-3">
          <label class="form-label" for="rating">Rating</label>
          <input
            class="form-range"
            type="range"
            min="1"
            max="5"
            name="review[rating]"
            id="rating"
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="body">Review</label>
          <textarea
            class="form-control"
            cols="30"
            rows="3"
            name="review[body]"
            id="body"
            required
          ></textarea>
          <div class="invalid-feedback">Review can't be empty</div>
        </div>
        <button class="btn btn-success">Submit</button>
      </div>
    </form>
    <div class="card p-4 mt-4">
      <h2 class="text-center">Reviews</h2>
      <% for (let review of campground.reviews) {%>
      <div class="card p-4 my-2">
        <h4>Rating: <%= review.rating %> Stars</h4>
        <p><%= review.body %></p>
        <form
          action="/campgrounds/<%= campground._id %>/review/<%= review._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>
</div>
